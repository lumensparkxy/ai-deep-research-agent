# Deep Research Agent Environment Variables
# Copy this file to .env and fill in your values

# Required Settings
GEMINI_API_KEY=your_api_key_here

# Optional Settings (defaults provided)
RESEARCH_DEPTH=standard
MAX_RESEARCH_SOURCES=10
SESSION_STORAGE_PATH=./data/sessions
REPORT_OUTPUT_PATH=./data/reports
LOG_LEVEL=INFO

# Research Configuration
RESEARCH_TIMEOUT_SECONDS=300
ENABLE_GROUNDING=true
ENABLE_SEARCH=true

# Output Configuration
INCLUDE_SOURCES=true
INCLUDE_TIMESTAMPS=true
DEFAULT_REPORT_FORMAT=markdown

# Performance & Limits
MAX_GAPS_PER_STAGE=10
MIN_CONFIDENCE_FALLBACK=0.1
DEFAULT_SESSION_LIMIT=50
QUERY_DISPLAY_LENGTH=100

# Validation
QUERY_MIN_LENGTH=5
QUERY_MAX_LENGTH=500
STRING_MAX_LENGTH=1000

# UI/Display
PROGRESS_BAR_LENGTH=40
BANNER_WIDTH=60
SEPARATOR_WIDTH=80

# File System
SESSION_FILE_PERMISSIONS=600
